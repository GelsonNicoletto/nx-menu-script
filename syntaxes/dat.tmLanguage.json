{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "NXMenuScript",
	"patterns": [		
		{"include": "#keywords"},
		{"include": "#comment"},		
		{"include": "#variable"},		
		{"include": "#strings"}			
	],
	"repository": {		
		"keywords": {
			"patterns": [				
				{"name": "keyword.command.dat",
					"match": "(#if FILE|#if|#else|#endif|#include)"
				},
				{"name": "keyword.opperator.dat",
					"match": "="
				},
					{"name": "keyword.control.gly",
					"match": "# (.*)=(.*)"
				}	
			]
		},		
		"variable": {
			"name": "variable.parameter.dat",
			"begin": "\\${",
			"end": "\\}",
			"patterns": [
				{"name": "constant.character.escape.dat",
					"match": "\\."
				}
			]
		},
		"comment": {
			"name": "comment.line.dat",
			"begin": "#",
			"end": "\n",
			"patterns": [
				{"name": "constant.character.escape.dat",
					"match": "\\."
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.dat",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{"name": "constant.character.escape.dat",
					"match": "\\."
				}
			]
		}
	},
	"scopeName": "source.dat"
}