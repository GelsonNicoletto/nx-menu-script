{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "NXMenuScript",
	"patterns": [
		{"include": "#keywords"},
		{"include": "#variable"},
		{"include": "#comment"},
		{"include": "#strings"}
	],
	"repository": {		
		"keywords": {
			"patterns": [				
				{"name": "keyword.control.grb",
					"match": "\\b(VERSION|MODIFY|END_OF_MODIFY|TITLE|BEGIN_DROPDOWN|END_DROPDOWN)\\b"
				},				
				{"name": "keyword.command.grb",
					"match": "\\b(APPLICATION_BUTTON|BUTTON|CASCADE_BUTTON|SEPARATOR|TOGGLE_BUTTON)\\b"
				},			
				{"name": "entity.name.function.scope.Button-Options.grb",
					"match": "\\b(ACTION|ACTIONS|ACTIONS/PRE|ACTIONS/POST|MESSSAGE|HELP|ACCELERATOR|BITMAP|HIDE|HINT|HINT EXCLUDE_FROM_COMMAND_FINDER|LABEL|NO_REPEAT|SHOW|SYNONYMS)\\b"
				},				
				{"name": "entity.name.function.scope.Menu-Options.grb",
					"match": "\\b(RIBBON_STYLE|AS_POPUP_MENU|MENU_FILES|LIBRARIES|POPUP_LOCATION|TOOLBAR_LABEL|RIBBON_LABEL|SENSITIVITY|VALUE|VIEW_POPUP_MENU_FILES)\\b"
				},				
				{"name": "variable.parameter.function.ON-OFF.grb",
					"match": "\\b(ON|OFF|SMALL_IMAGE_AND_TEXT)\\b"
				},			
				{"name": "variable.parameter.function.grb",
					"match": "\\b(LABEL)\\b"
				}
			]
		},		
		"variable": {
			"name": "variable.parameter.grb",
			"begin": "\\${",
			"end": "\\}",
			"patterns": [
				{"name": "constant.character.escape.grb",
					"match": "\\."
				}
			]
		},
		"comment": {
			"name": "comment.line.grb",
			"begin": "!",
			"end": "\n",
			"patterns": [
				{"name": "constant.character.escape.grb",
					"match": "\\."
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.grb",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{"name": "constant.character.escape.grb",
					"match": "\\."
				}
			]
		}
	},
	"scopeName": "source.grb"
}